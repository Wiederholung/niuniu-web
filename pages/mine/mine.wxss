/* pages/mine/mine.wxss */
page{
    background-color: #eee;
  }
  .user_info_wrap{
    height: 45vh;
    background-color: var(--themeColor);
    position: relative;
  }
  .user_img_wrap .usr_bg{
    height: 45vh;
    filter:blur(10rpx);
    width: 100%;
  }
  .user_info{
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    top:20%;
    text-align: center;
  }
  .user_info image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
  }
  .user_name{
    color: #fff;
    margin-top: 40rpx;
    font-size: 40rpx;
  }
  .user_btn{
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    top:40%;
    border:solid 6rpx var(--themeColor);
    color:var(--themeColor);
    font-size: 40rpx;
    background-color: #fff;
    border-radius: 10rpx;
  }
  .user_content{
    position: relative;
    height: 100%;
  }
  .user_main{
    position: absolute;
    width: 90%;
    left: 50%;
    transform: translate(-50%);
    top: -40rpx;
  }
  .history_wrap{
    background-color: #fff;
    display: flex;
  }
  .history_wrap navigator{
    flex: 1;
    text-align: center;
    padding: 10rpx 0;
  }
  .history_wrap navigator .history_num{
    color: var(--themeColor);
  }
  .app_info_wrap{
  
  }
  .app_info_wrap navigator{
    font-size: 30rpx;
    margin-top: 20rpx;
    background-color: #fff;
    padding: 30rpx;
  }
page,
.page,
.page__bd {
  height: 100%;
}
.page__bd {
  padding-bottom: 0;
}
.weui-tab_content {
  padding-top: 60px;
  text-align: center;
  font-size: 32rpx;
}
.weui-navbar {
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 95rpx;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 32rpx;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.weui-navbar-item {
  flex: 1;
  padding: 26rpx 0px;
}
.weui-navbar-item-on {
  transition: all 0.3s;
  border-bottom: 10rpx solid #478ff3;
  color: #478ff3;
}
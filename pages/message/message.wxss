/* pages/message/message.wxss */
.first_tab{}
.first_tab .goods_item{
  display: flex;
  margin: 20rpx 0;
  border-bottom: solid 4rpx #eee;
}
.first_tab .goods_item .goods_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_img_wrap image{
  width: 70%;
}
.first_tab .goods_info_wrap{
  flex:3;
}
.goods_info_wrap .goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color:rgb(32, 31, 31);
  font-size: 28rpx;
}
.goods_info_wrap .goods_title{
  color: var(--themeColor);
  font-size: 32rpx;
  margin-bottom: 30rpx;
}